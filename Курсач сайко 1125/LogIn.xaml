<Window x:Class="Курсач_сайко_1125.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно входа" SizeToContent="Height" MinHeight="150" Width="300" Background="#FFB2F3FF"
        xmlns:local="clr-namespace:Курсач_сайко_1125">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/1641472027_26-www-funnyart-club-p-krasivie-gradientnie-foni-26.jpg"/>
        </Grid.Background>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="292" Margin="0,103,0,0">
            <Label Content="{Binding ErrorMessage}" FontSize="15" Foreground="Red"/>
            <Label MinWidth="200" Content="Логин" HorizontalContentAlignment="Center" Padding="5" Margin="5" />
            <TextBox Text="{Binding Login}" Padding="5" Margin="5"  Background="AliceBlue" />
            <Label Content="Пароль" HorizontalContentAlignment="Center" Padding="5" Margin="5"/>
            <PasswordBox x:Name="passwordBox" Padding="5" Margin="5" Background="AliceBlue"/>
            <Button Content="Войти" Click="LoginButton_Click" Background="AliceBlue"/>
            <Button Content="Зарегистрируйтесь" Click="RegisterButton_Click" Background="AliceBlue" Height="23"/>
        </StackPanel>

    </Grid>
</Window>