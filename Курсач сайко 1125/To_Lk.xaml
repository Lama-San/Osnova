<Window x:Class="Курсач_сайко_1125.To_Lk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсач_сайко_1125"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/1641472027_26-www-funnyart-club-p-krasivie-gradientnie-foni-26.jpg"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="292" Margin="0,103,0,0">
            <Label Content="{Binding ErrorMessage}" FontSize="15" Foreground="Red"/>
            <Label MinWidth="200" Content="Паспорт" HorizontalContentAlignment="Center" Padding="5" Margin="5" />
            <TextBox Text="{Binding PassportNumber}" Padding="5" Margin="5"  Background="AliceBlue" />
            <Label Content="Пароль" HorizontalContentAlignment="Center" Padding="5" Margin="5"/>
            <PasswordBox x:Name="passwordBox" Padding="5" Margin="5" Background="AliceBlue"/>
            <Button Content="Войти" Click="LoginButton" Background="AliceBlue"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton" Background="AliceBlue" Height="23"/>
        </StackPanel>
    </Grid>
</Window>